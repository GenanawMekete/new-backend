{
  "name": "bingo-backend",
  "version": "1.0.0",
  "description": "Multiplayer Bingo Game Backend for Telegram Mini App",
  "main": "server.js",
  "scripts": {
    "start": "node server.js",
    "dev": "nodemon server.js",
    "prod": "NODE_ENV=production node server.js",
    "build": "npm install",
    "test": "jest",
    "migrate": "node src/database/migrations/runMigrations.js",
    "seed": "node src/database/seeders/runSeeders.js",
    "migrate:list": "node src/database/migrations/runMigrations.js list",
    "seed:list": "node src/database/seeders/runSeeders.js list",
    "seed:reset": "node src/database/seeders/runSeeders.js reset",
    "db:setup": "npm run migrate && npm run seed",
    "db:reset": "npm run seed:reset && npm run seed",
    "lint": "eslint src/",
    "fix": "eslint src/ --fix"
  },
  "dependencies": {
    "express": "^4.18.2",
    "socket.io": "^4.7.2",
    "mongoose": "^7.5.0",
    "cors": "^2.8.5",
    "helmet": "^7.0.0",
    "dotenv": "^16.3.1",
    "bcryptjs": "^2.4.3",
    "jsonwebtoken": "^9.0.2",
    "node-cron": "^3.0.2",
    "axios": "^1.5.0",
    "express-rate-limit": "^6.10.0",
    "winston": "^3.10.0",
    "joi": "^17.9.2",
    "uuid": "^9.0.0",
    "compression": "^1.7.4",
    "morgan": "^1.10.0",
    "express-validator": "^7.0.1",
    "cookie-parser": "^1.4.6",
    "csurf": "^1.11.0",
    "express-mongo-sanitize": "^2.2.0",
    "hpp": "^0.2.3",
    "xss-clean": "^0.1.4",
    "validator": "^13.11.0"
  },
  "devDependencies": {
    "nodemon": "^3.0.1",
    "jest": "^29.6.2",
    "supertest": "^6.3.3",
    "eslint": "^8.47.0",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-plugin-import": "^2.28.1",
    "eslint-plugin-jest": "^27.2.3",
    "@types/jest": "^29.5.5",
    "prettier": "^3.0.2"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  },
  "keywords": [
    "bingo",
    "game",
    "multiplayer",
    "telegram",
    "mini-app",
    "socket.io",
    "mongodb",
    "real-time",
    "gaming"
  ],
  "author": {
    "name": "Genanaw Mekete",
    "email": "genanawmekete50@gmail.com",
    "url": "https://github.com/GenanawMekete"
  },
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/GenanawMekete/bingo-backend.git"
  },
  "bugs": {
    "url": "https://github.com/GenanawMekete/bingo-backend/issues"
  },
  "homepage": "https://github.com/GenanawMekete/bingo-backend#readme",
  "funding": {
    "type": "individual",
    "url": "https://github.com/sponsors/GenanawMekete"
  },
  "contributors": [
    {
      "name": "Your Name",
      "email": "your.email@example.com",
      "url": "https://github.com/GenanawMekete"
    }
  ],
  "jest": {
    "testEnvironment": "node",
    "collectCoverageFrom": [
      "src/**/*.js",
      "!src/**/*.test.js",
      "!src/database/migrations/**",
      "!src/database/seeders/**"
    ],
    "coverageDirectory": "coverage",
    "coverageReporters": [
      "text",
      "lcov",
      "html"
    ],
    "testMatch": [
      "**/__tests__/**/*.js",
      "**/?(*.)+(spec|test).js"
    ],
    "moduleFileExtensions": [
      "js",
      "json"
    ],
    "setupFilesAfterEnv": [
      "./tests/setup.js"
    ]
  },
  "nodemonConfig": {
    "watch": [
      "src/**/*.js",
      ".env"
    ],
    "ext": "js,json",
    "ignore": [
      "src/**/*.test.js",
      "node_modules/",
      "coverage/",
      "logs/"
    ],
    "exec": "node server.js",
    "env": {
      "NODE_ENV": "development"
    }
  },
  "prettier": {
    "semi": true,
    "singleQuote": true,
    "trailingComma": "es5",
    "printWidth": 80,
    "tabWidth": 2,
    "useTabs": false
  }
}
